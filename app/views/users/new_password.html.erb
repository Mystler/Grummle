<h1><%= t :changepassword %></h1>
<%= form_for @user, url: update_password_path(username: params[:username], token: params[:token]), method: :patch do |f| %>
  <%= render 'shared/flash' %>
  <% if @user.errors.any? %>
  <div class="alert alert-danger">
    <b><%= t :usererror %></b>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit t(:changepassword), class: 'pull-right btn btn-success' %>
  </div>
<% end %>
<%= link_to t(:back), login_path %>
