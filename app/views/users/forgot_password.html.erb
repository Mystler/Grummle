<h1><%= t :resetpassword %></h1>
<%= form_tag reset_password_path do |f| %>
  <%= render 'shared/flash' %>
  <div class="form-group">
    <%= label_tag :username, t('user.username') %>
    <%= text_field_tag :username, params[:username], class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= label_tag :email, t('user.email') %><br>
    <%= email_field_tag :email, params[:email], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= submit_tag t(:resetpassword), class: 'pull-right btn btn-success' %>
  </div>
<% end %>
<%= link_to t(:back), login_path %>
