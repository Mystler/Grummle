<%= form_for @note do |f| %>
  <% if @note.errors.any? %>
  <div class="alert alert-danger">
    <b><%= t :noteerror %></b>
    <ul>
      <% @note.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="checkbox">
    <%= f.label :public do %>
      <%= f.check_box :public %><%= t 'note.public' %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'pull-right btn btn-success' %>
  </div>
<% end %>
