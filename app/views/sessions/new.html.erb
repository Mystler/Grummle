<h1><%= t :login %></h1>
<%= form_tag login_path do |f| %>
  <%= render 'shared/flash' %>
  <div class="form-group">
    <%= label_tag :username, t('user.username') %>
    <%= text_field_tag :username, params[:username], class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= label_tag :password, t('user.password') %><br>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>
  <div class="checkbox">
    <%= label_tag :remember_me do %>
      <%= check_box_tag :remember_me %><%= t :rememberme %>
    <% end %>
  </div>
  <div class="form-group">
    <%= submit_tag t(:login), class: 'pull-right btn btn-success' %>
  </div>
<% end %>
<i class="fa fa-google-plus-square fa-lg"></i> <%= link_to t(:login_google), '/auth/google_oauth2' %><br>
<i class="fa fa-facebook-square fa-lg"></i> <%= link_to t(:login_facebook), '/auth/facebook' %><br>
<%= link_to t(:forgotpassword), forgot_password_path %><br>
<%= link_to t(:signup), signup_path %>
