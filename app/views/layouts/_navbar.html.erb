<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
        <span class="sr-only">Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Grummle', notes_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse" id="navbar">
      <ul class="nav navbar-nav">
        <%= content_tag :li, class: active_controller('notes') || active_controller('share') do %>
          <%= link_to t(:notes), notes_path %>
        <% end %>
        <%= content_tag :li, class: active_page(about_path) do %>
          <%= link_to t(:about), about_path %>
        <% end %>
      </ul>
